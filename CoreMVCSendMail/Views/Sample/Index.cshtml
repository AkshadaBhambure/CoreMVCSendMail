@model EmailModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4">
        @using(Html.BeginForm())
        {
            <div class="card">
                <div class="card-header">
                    <h4>Send Email </h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label>User Name</label>
                        @Html.TextBoxFor(e=>e.UserName,new{@class="form-control"})
                    </div>

                    <div class="mb-3">
                        <label>Email Address</label>
                        @Html.TextBoxFor(e => e.EmailAddress, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label>Subject</label>
                        @Html.TextBoxFor(e => e.Subject, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label>Message</label>
                        @Html.TextAreaFor(e=>e.Message,new{@class="form-control"})
                    </div>

                </div>
                <div class="card-footer">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <b> @ViewBag.msg</b>
                </div>
            </div>
        }

    </div>
</div>

